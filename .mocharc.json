{
  "require": [
    "ts-node/register",
    "mocha-steps"
  ],
  "node-option": ["experimental-specifier-resolution=node", "loader=ts-node/esm"],
  "extensions":  ["ts"],
  "recursive": true,
  "parallel": true,
  "jobs": 6,
  "spec": [
    "./test/basic/*-test.ts",
    "./test/swappools/*-test.ts",
    "./test/entities/*-test.ts",
    "./test/erc20/*-test.ts",
    "./test/tokenswap/*-test.ts",
    "./test/bridge/*-test.ts"
  ],
  "watch-files": [
    "src"
  ]
}