{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "types": [
      "node",
      "mocha"
    ],
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "files": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*-test.ts"
  ]
}